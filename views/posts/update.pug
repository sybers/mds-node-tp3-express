extends ../layout.pug

block content
  div
    a(href=`/posts/${post.id}`) ‚Üê Back to posts details

    form(action=`/posts/${post.id}/update` method="post")
      input(type="text" name="title" placeholder="Post title" value=post.title)
      br
      textarea(name="body" cols="30" rows="10" placeholder="Post content")=post.body
      br
      label(for="isPublished") Published ?
        input(type="checkbox" id="isPublished" name="isPublished" checked=!!post.isPublished)
      br
      button(type="submit") Update post
